<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:text="@string/words_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/colorMidnight"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        tools:layout_editor_absoluteX="37dp" >
        <TableRow
            android:layout_weight="1">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/btn_camera"
                fancy:fb_radius="10dp"
                fancy:fb_defaultColor="@color/colorPaleBlue"
                fancy:fb_iconResource="@drawable/ic_camera_small"
                fancy:fb_iconPosition="top"
                fancy:fb_iconPaddingBottom="5dp"
                fancy:fb_text="图像"
                fancy:fb_textSize="15dp"
                fancy:fb_textGravity="center_horizontal"
                android:scaleType="centerInside"
                ></mehdi.sakout.fancybuttons.FancyButton>
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                fancy:fb_radius="10dp"
                fancy:fb_defaultColor="@color/colorPaleBlue"
                fancy:fb_iconResource="@drawable/ic_camera_small"
                fancy:fb_iconPosition="top"
                fancy:fb_iconPaddingBottom="5dp"
                fancy:fb_text="图像"
                fancy:fb_textSize="15dp"
                fancy:fb_textGravity="center_horizontal"
                android:scaleType="centerInside"
                ></mehdi.sakout.fancybuttons.FancyButton>
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                fancy:fb_radius="10dp"
                fancy:fb_defaultColor="@color/colorPaleBlue"
                fancy:fb_iconResource="@drawable/ic_camera_small"
                fancy:fb_iconPosition="top"
                fancy:fb_iconPaddingBottom="5dp"
                fancy:fb_text="图像"
                fancy:fb_textSize="15dp"
                fancy:fb_textGravity="center_horizontal"
                android:scaleType="centerInside"
                ></mehdi.sakout.fancybuttons.FancyButton>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                fancy:fb_radius="10dp"
                fancy:fb_defaultColor="@color/colorPaleBlue"
                fancy:fb_iconResource="@drawable/ic_camera_small"
                fancy:fb_iconPosition="top"
                fancy:fb_iconPaddingBottom="5dp"
                fancy:fb_text="图像"
                fancy:fb_textSize="15dp"
                fancy:fb_textGravity="center_horizontal"
                android:scaleType="centerInside"
            ></mehdi.sakout.fancybuttons.FancyButton>
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                fancy:fb_radius="10dp"
                fancy:fb_defaultColor="@color/colorPaleBlue"
                fancy:fb_iconResource="@drawable/ic_camera_small"
                fancy:fb_iconPosition="top"
                fancy:fb_iconPaddingBottom="5dp"
                fancy:fb_text="图像"
                fancy:fb_textSize="15dp"
                fancy:fb_textGravity="center_horizontal"
                android:scaleType="centerInside"
                ></mehdi.sakout.fancybuttons.FancyButton>
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                fancy:fb_radius="10dp"
                fancy:fb_defaultColor="@color/colorPaleBlue"
                fancy:fb_iconResource="@drawable/ic_camera_small"
                fancy:fb_iconPosition="top"
                fancy:fb_iconPaddingBottom="5dp"
                fancy:fb_text="图像"
                fancy:fb_textSize="15dp"
                fancy:fb_textGravity="center_horizontal"
                android:scaleType="centerInside"
                ></mehdi.sakout.fancybuttons.FancyButton>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>